<!doctype html>
<html class="no-js" lang="">
<head>
  <meta charset="utf-8">
  <title>npm statusboard</title>
  <meta name="description" content="">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <style>
    @import url("https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css");
    @import url("https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css");
  </style>
</head>
<body>
  <h2>npm statusboard</h2>
  <table class="table table-striped table-bordered" data-sortable>
    <thead>
    <tr>
      <th>
        Name
      </th>
      <th>
        Stars
      </th>
      <th>
        Issues
      </th>
      <th>
        Pull&nbsp;Requests
      </th>
      <th>
        License
      </th>
      <th>
        Last Commit
      </th>
      <th>
        Code&nbsp;of&nbsp;Conduct
      </th>
      <th>
        Build&nbsp;Status
      </th>
      <th>
        Node
      </th>
      <th>
        Downloads
      </th>
      <th>
        Size
      </th>
      <th>
        Version
      </th>
    </tr>
    </thead>
    <tbody>
  {{#each repos}}
    <tr>
      <td>
        <a href="https://www.github.com/npm/{{name}}" target="_blank">{{name}}</a>
      </td>
      <td>
        {{stargazers_count}}
      </td>
      <td>
        {{open_issues_count}}
      </td>
      <td>
        {{pullRequests.totalCount}}
      </td>
      <td>
        {{license.key}}
      </td>
      <td>
        {{pushed_at}}
      </td>
      <td>
        {{codeOfConduct.name}}
      </td>
      <td>
        {{build_status}}
      </td>
      <td>
        {{node_version}}
      </td>
      <td>
        {{downloads}}
      </td>
      <td>
        {{size}}
      </td>
      <td>
        {{package_version}}
      </td>
    </tr>
  {{/each}}
  </tbody>
  </table>
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
<script>
$(document).ready(function () {
  $('table').DataTable({ paging: false })
})
</script>
</body>
</html>